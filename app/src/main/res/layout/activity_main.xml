<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tele.custombleservice.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />
        <Button
            android:id="@+id/scan_bt"
            android:text="扫描设备"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@android:color/holo_green_dark"
            android:textColor="@color/colorPrimary"
            android:id="@+id/show-bt-ble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scan_bt"/>
        <Button
            android:text="停止"
            android:id="@+id/stop_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.example.tele.custombleservice.CustomLayout
            android:id="@+id/custom_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF0000">
            <com.example.tele.custombleservice.CircleView
                android:id="@+id/custom_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.example.tele.custombleservice.LineCustomView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                ></com.example.tele.custombleservice.LineCustomView>
        </com.example.tele.custombleservice.CustomLayout>
    </RelativeLayout>



</LinearLayout>
